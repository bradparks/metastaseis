@require 'nib'
@require 'jeet'

.overhead
  clearfix()
  padding-bottom: 20px
  .time-setting
    col(1/6)
    padding-bottom: 20px
 .timeline
   col(5/6)
   position: relative

   li
     display: inline-block
     width: 65px
     &:before
       content: '|'
       position: absolute
       bottom: -15px
       margin-left: 4px
     &:first-child:before
       margin-left: 0px
     &:nth-child(2):before
       margin-left: 0px
     &:after
       content: '| | | |'
       position: absolute
       bottom: -14px
       font-size: 10px
       letter-spacing: 5px
       margin-left: 0px
     &:first-child:after
       margin-left: 4px
     &:nth-child(2):after
       margin-left: 5px