@require 'nib'
@require 'jeet'

better-font()
  -webkit-text-size-adjust: 100%
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  text-rendering: optimizeLegibility
  font-feature-settings: 'liga', 'kern'
  font-family: monospace, sans-serif
  // font-family: 'HelveticaNeue-Light', 'Helvetica Neue Light', 'Helvetica Neue', Arial, Helvetica, sans-serif
  font-weight: 300

html, body
  width: 100%
  height: 100%
  better-font()

button
  background: #D9D9D9
  padding: 5px 10px
  text-transform: capitalize

body > header
  background: #fff
  width: 100%
  padding: 10px 10%
  border-bottom: 2px solid #DDD
  margin-bottom: 5px
  fixed: top;
  z-index: 4

footer
  fixed: bottom
  width: 100%
  background: white
  z-index: 4

  a
    color: #F623F6
    text-decoration: none
    float: right
    margin-bottom: 10px
    margin-right: 10px

#import 
  position: absolute
  left: -1500px